{
  "name": "@paulshryock/logger",
  "version": "0.0.0",
  "description": "PSR-3-compliant logger.",
  "keywords": [
    "psr-3",
    "psr3",
    "log",
    "logger",
    "logging",
    "console"
  ],
  "homepage": "https://github.com/paulshryock/logger",
  "bugs": {
    "url": "https://github.com/paulshryock/logger/issues/new?assignees=&labels=bug&projects=&template=4_report_a_bug.md&title="
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/paulshryock/logger.git"
  },
  "license": "MIT",
  "author": "Paul Shryock (https://github.com/paulshryock)",
  "type": "module",
  "main": "./dist/index.js",
  "typings": "./dist/index.d.ts",
  "scripts": {
    "precompile": "rm -rf dist",
    "compile": "esbuild src/index.ts --bundle --format=esm --outfile=dist/index.js --platform=node",
    "compile:docs": "typedoc --out dist/docs src/index.ts",
    "compile:types": "dts-bundle-generator --no-banner=true --out-file=dist/index.d.ts src/index.ts",
    "postcompile": "npm run compile:docs && npm run compile:types",
    "quality": "npm run typecheck && npm test && npm run compile",
    "test": "jest",
    "typecheck": "tsc"
  },
  "devDependencies": {
    "@babel/core": "7.26.0",
    "@babel/preset-env": "7.26.0",
    "@babel/preset-typescript": "7.26.0",
    "@jest/globals": "29.7.0",
    "@types/node": "22.8.2",
    "babel-jest": "29.7.0",
    "dts-bundle-generator": "9.5.1",
    "esbuild": "0.23.1",
    "jest": "29.7.0",
    "ts-node": "10.9.2",
    "tslib": "2.8.1",
    "typedoc": "0.27.1",
    "typescript": "5.7.2"
  }
}
